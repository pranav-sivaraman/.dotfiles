(deftemplate charmod (char mod)
  (switch
    ((key-timing 1 less-than $tap-time)) $char break
    () (tap-hold $tap-time $hold-time $char $mod) break
  )
)

(defalias
  fn (tap-hold $tap-time $hold-time fn (layer-toggle fn))
  a (t! charmod a lmet)
  s (t! charmod s lalt)
  d (t! charmod d lctl)
  f (t! charmod f lsft)
  j (t! charmod j rsft)
  k (t! charmod k rctl)
  l (t! charmod l ralt)
  ; (t! charmod ; rmet)
  hyper (multi lctl lsft lalt lmet)
)

